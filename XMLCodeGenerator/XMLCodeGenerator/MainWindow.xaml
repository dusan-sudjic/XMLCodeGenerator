<Window x:Class="XMLCodeGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XMLCodeGenerator"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="800">
    <Grid>
        <Button Click="ReadClassesFromFileClick" Height="50px" Width="140px" VerticalAlignment="Top" Margin="0,20,0,0">Read classes from file</Button>
        <Label FontSize="12" Margin="30,70,0,0" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left">Loaded Classes</Label>
        <ListBox x:Name="classListBox" Margin="20,100,20,20">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding ClassName}" FontWeight="Bold" FontSize="10" Margin="0,0,0,5"/>
                        <TextBlock Text="{Binding Properties}" FontSize="7"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
